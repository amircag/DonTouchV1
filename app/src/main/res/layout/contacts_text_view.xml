<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/contactPic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_placeholder"
        app:civ_border_color="#000"
        app:civ_border_width="1dp"
        android:layout_marginTop="3dp"
        android:paddingLeft="10dp"/>

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_toRightOf="@id/contactPic"
        android:layout_centerVertical="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="10dp"
        android:textSize="22dp"
        android:textColor="@color/dtBlack"
        android:id="@+id/textview_android_contact_name"
        android:ellipsize="end">
    </TextView>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/added_member_icon"
        android:src="@drawable/addedmembericon"
        android:layout_alignEnd="@id/contactPic"
        android:layout_alignBottom="@id/contactPic"/>


</RelativeLayout>