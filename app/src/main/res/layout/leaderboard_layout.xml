<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:id="@+id/reltive_layout_leaderBoard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/player_bg"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/player_rank"
                android:text="1"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/image_for_leaderboard"
                android:src="@mipmap/ic_launcher"
                android:layout_toRightOf="@id/player_rank"
                android:layout_marginLeft="10dp"

                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nameforLeaderboard"
                android:text="Player Name"
                android:textSize="16sp"

                android:layout_toRightOf="@id/image_for_leaderboard"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#000"/>

        </LinearLayout>
</RelativeLayout>