<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".EndGamePersonalStat"
    android:theme="@style/AppTheme.NoActionBar"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_for_personal_stat_screen"
        android:orientation="vertical"
        android:background="@color/dtBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/profileImageContainer_pStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/headerStrip">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:id="@+id/relative_title">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:id="@+id/personalImageForStats"
                    android:src="@drawable/profile_placeholder"
                    app:civ_border_color="#fff"
                    app:civ_border_width="1dp"
                    android:background="@drawable/circle"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:id="@+id/player_name_for_stats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fresh Prince"
                    android:textSize="16sp"
                    android:textColor="#fff"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="100dp"/>
                <Button
                    android:id="@+id/to_owns_log_bt"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_own_log"
                    android:layout_gravity="center"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/stat_for_owend_text"
            android:orientation="vertical"
            android:layout_marginTop="25dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stats_title_ps"
                android:textColor="@color/dtGold"
                android:text="MY STATISTICS"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/personal_stats_end_screen"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/profile_border"
                android:layout_margin="15dp">
                <TextView
                    android:id="@+id/Rank_text_pStats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="RANK"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:gravity="end"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/trophy"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/rankDynamic_ps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:text="My Rank"
                        android:textColor="#000"
                        android:layout_marginLeft="8dp"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/profile_border"
                android:layout_margin="15dp">

                <TextView
                    android:id="@+id/ScoreTitle_ps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="SCORE"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAlignment="center"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/score_meter"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/ScoreDynamic_ps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="My Score"
                        android:gravity="center"
                        android:textColor="#000"
                        android:layout_marginLeft="8dp"/>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">

            <LinearLayout
                android:id="@+id/timeBox_ps"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/profile_border"
                android:layout_margin="15dp"
                >

                <TextView
                    android:id="@+id/timeTitle_ps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="TIME ON PHONE"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAlignment="center" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/on_time_personal"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/timeDynamic_ps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="00:00:00"
                        android:textColor="#000"
                        android:gravity="center"
                        android:layout_marginLeft="8dp"/>
                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/profile_border"
                android:layout_margin="15dp">
                <TextView
                    android:id="@+id/ownTitle_ps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="OWNED"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/phowned_logo_small"/>
                    <TextView
                        android:id="@+id/ownsDynamic_ps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:layout_marginLeft="8dp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_marginBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/layout_lobby_bt"
            android:layout_marginBottom="15dp"
            android:gravity="center">

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/lobby_bt"
                android:background="@drawable/rounded_button"
                android:text="To Lobby"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="#fff"/>

        </LinearLayout>

